<html>
<%- include partials/head.ejs %>
    <body>
        <div class="container-fluid welcome">
          <%- include partials/auth-header %>
        </div>
        <h3>
          <%=message%>
        </h3>
        <div class="container">
          <div class="row center">
            <div class="form-container col-sm-10 col-md-6 col-md-offset-3 col-sm-offset-1">
              <img class="img-responsive andela-logo img-rounded" src="/images/andela-logo.png">
              <p class="text-center"><strong>Login</strong></p>
              <form method="POST" action="/login">
                <div class="form-group">
                  <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-2">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Your username" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Your password" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10 col-md-8 col-md-offset-3 col-md-offset-2 text-center">
                    <button type="submit" class="btn btn-primary btn-login col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-2">Login</button>
                  </div>
                  <h5 class="text-center"><a class="btn btn-link" href="/register">Don't have an account?</a></h5>
                </div>
              </form>
            </div>
          </div>
        </div>
    </body>
</html>
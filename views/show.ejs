<html>
<%- include partials/head.ejs %>

  <body>
    <%- include partials/nav.ejs %>
      <div class="container">
      <%- include partials/editInitiative.ejs %> 
        <div class="col-sm-12 col-md-10 col-md-offset-1  news-feed">
          <div class="row">
            <div class="col-sm-10 col-md-10 col-sm-offset-1 col-md-offset-1">
              <h3>
                <%=initiative.title%>
              </h3>
              <div class="col-md-4">
                <img src="<%=initiative.image%>" class="img-circle col-sm-12 col-md-10 col-md-offset-1" alt="Intiative Image">
              </div>
              <div>
                <%=initiative.description%>
              </div>
            <div>
              <button type="button" id="editInitiative-<%=initiative._id%>" class="btn btn-info btn-xs edit" data-toggle="modal" data-target="#createInitiative">Edit Intiative</button>
              <form style="display: inline;" action="/andelainitiative/<%=initiative._id%>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete Initiative">
              </form>
            </div>
            </div>
          </div>
          <div class="col-sm-12 col-md-10 opinion-form col-md-offset-1">
            <div id="accordion" class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1 panel-group">
              <div class="pannel-heading">
                <h2 class="text-center">
                  <a data-toggle="collapse" data-parent="#accordion" href="#form">Write an opinion</a>
                </h2>
              </div>
              <form id="form" class="panel-collapse collapse">
                <div class="form-group">
                  <label for="heading" class="control-label">Heading</label>
                  <input class="form-control" id="heading" name="heading">
                </div>
                <div class="form-group">
                  <label for="description" class="control-label">Details</label>
                  <textarea class="form-control" id="description" name="description" rows="2"></textarea>
                </div>
              </form>
              <div class="row opinion-wrapper">
                <%if(initiative){%>
                  <% const opinions = initiative.opinions%>
                  <%opinions.forEach((opinion) => {%>
                  <div class="vote">

                  </div>
                    <div class="col-sm-12 col-md-12 opinion-container">
                       <h4><%=opinion.author%> Says: <%=opinion.title%></h4>
                       <p><em><%=opinion.date%></em></p>
                       <p><%=opinion.description%></p>
                    </div>
                    <%})%>
                  <%}%>
            </div>
          </div>
        </div>
      </div>
      <script src="/js/main.js"></script>
  </body>

</html>
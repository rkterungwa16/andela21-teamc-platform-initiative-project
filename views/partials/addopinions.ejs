<div id="createOpinion" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <h4 style="text-align: center;" class="modal-title"><strong><em>Add your opinions</em></strong></h4>
      </div>
      <div class="modal-body">
        <form action="#" method="POST" id="createOpinion">
          <div class="form-group">
            <label for="description" class="control-label"></label>
            <textarea type="text" name="description" class="form-control" rows="6" id="description"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="form-control btn btn-primary">Submit Opinion</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default c-opinion" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<html>
<%- include partials/head.ejs%>

<body>
<%- include partials/nav.ejs%>
  <div class="container">
    <div class="row center">
      <div class="form-container col-sm-10 col-md-6 col-md-offset-3 col-sm-offset-1">
        <p class="text-center"><strong>Sign Up</strong></p>
            <form method="POST" action="/register">
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
              <label for="username">Username</label>
              <input name="username" type="text" class="form-control" id="username" placeholder="Your username" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
              <label for="fullname">Full Name</label>
              <input name="fullname" type="text" class="form-control" id="fullname" placeholder="Your full name" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
              <label for="email">Email</label>
              <input name="email" type="text" class="form-control" id="email" placeholder="Your email" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
              <label for="password">Password</label>
              <input name="password" type="password" class="form-control" id="password" placeholder="Your password" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
              <label for="password2">Confirm password</label>
              <input name="password2" type="password" class="form-control" id="password" placeholder="Your password" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-md-8 col-md-offset-2 col-md-offset-2 text-center">
              <button type="submit" class="btn btn-primary btn-login col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-2">Sign Up</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>